                    @Html.DisplayFor(modelItem => item.DocumentKey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentExpiryDate)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentName)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.JobCountryName)
                </td>
              

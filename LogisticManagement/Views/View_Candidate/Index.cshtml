                    @Html.DisplayFor(modelItem => item.JobTrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobCompany)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.SkillName)
                </td>
              
